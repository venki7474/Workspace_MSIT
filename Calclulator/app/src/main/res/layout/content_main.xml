<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chotu.calclulator.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="25dp"
            android:nestedScrollingEnabled="true"
            android:onClick="onNum1"
            android:text="1" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="2"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="25dp"
            android:onClick="onNum2" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="3"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="25dp"
            android:onClick="onNum3" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="+"
            android:id="@+id/AddButton"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="25dp"
            android:onClick="onAdd" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="4"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25dp"
            android:onClick="onNum4" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="5"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="25dp"
            android:onClick="onNum5" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="6"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="25dp"
            android:onClick="onNum6" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="@string/subtract"
            android:id="@+id/SubButton"
            android:layout_row="1"
            android:layout_column="3"
            android:textSize="25dp" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="7"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="25dp"
            android:onClick="onNum7" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="8"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="25dp"
            android:onClick="onNum8" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="9"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="25dp"
            android:onClick="onNum9" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="@string/multiply"
            android:id="@+id/MulButton"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="25dp" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="."
            android:id="@+id/buttonDot"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="25dp" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="0"
            android:id="@+id/button0"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="25dp"
            android:onClick="onNum0" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="@string/equalTo"
            android:id="@+id/buttonEqualTo"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="25dp"
            android:onClick="onEqualTo" />

        <Button
            android:layout_width="82dp"
            android:layout_height="102dp"
            android:text="@string/division"
            android:id="@+id/DivButton"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="25dp" />

    </GridLayout>

    <Button
        android:layout_width="97dp"
        android:layout_height="67dp"
        android:text="CLEAR"
        android:id="@+id/buttonclear"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_alignBottom="@+id/buttonclear"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_toStartOf="@+id/buttonclear"
        android:layout_alignTop="@+id/buttonclear" />

</RelativeLayout>
